<div class="text-center">
    <h2>The input element</h2>

    <form id='form-user' action="#" method="post">
        <div class="form-box error" data-errormsg="">
            <label for="input-message">Enter Message:</label>
            <input type="text" id="input-message" autofocus placeholder="enterMessage" tabindex="1" />
        </div>


        <div class="form-box" data-errormsg="">
            <label for="input-alarm">Alarm ID:</label>
            <input type="text" id="input-alarm" autofocus placeholder="alarmId" tabindex="2" />
        </div>

        <div class="form-box" data-errormsg="">
            <label for="input-video">Video Server no:</label>
            <input type="text" id="input-video" autofocus placeholder="videoServerNo" tabindex="3" />
        </div>

        <div class="form-box" data-errormsg="">
            <button id="button-submit">Submit</button>
        </div>
    </form>

    <script src="~/Scripts/alarmVideo.js"></script>
</div>